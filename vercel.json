{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, max-age=0" }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/feeds/:action(add|delete|reorder|update|admin)",
      "destination": "/api/feeds?action=:action"
    },
    {
      "source": "/api/feeds/list/admin",
      "destination": "/api/feeds?action=admin"
    },
    {
      "source": "/api/feeds/list",
      "destination": "/api/feeds"
    },
    {
      "source": "/api/feeds/summary",
      "destination": "/api/feeds?action=summary"
    },
    {
      "source": "/api/history/:action(get|upsert)",
      "destination": "/api/history?action=:action"
    },
    {
      "source": "/((?!api|assets|_next).*)",
      "destination": "/"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
